<div class="container mt-5" style="width: 50vh">
  <%= simple_form_for [@account, @transaction] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="form-inputs">
      <%= f.input :transfer_type,
                  collection: Transaction::TRANSACTIONS,
                  as: :select
      %>
      <br>
      <%= f.input :amount,
                  label:false,
                  placeholder: 'maximun ammount: 900 dolars'
      %>
      <br>
      <%= f.input :account_to_transfer,
                  label:false,
                  placeholder: 'for TRANSFER only'
      %>

    </div>
    <div class="form-actions mt-3" style="padding-bottom: 30px">
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  <% end %>
  <%= link_to "Back", account_url(@account) %>
  </div>
</div>
